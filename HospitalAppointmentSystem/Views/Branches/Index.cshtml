@model IEnumerable<HospitalAppointmentSystem.Models.Branch>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.branchName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.policlinic.policlinicName)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.branchName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.policlinic.policlinicName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.branchId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.branchId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.branchId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
